c-----------------------------------------------------------------------
      subroutine userchk
      use neklab
      use stdlib_io_npy, only: load_npy
      include "SIZE"
      include "TOTAL"

      ! System for which we seek a fixed point
      type(nek_system), allocatable :: sys
      ! State vectors
      type(nek_dvector) :: bf
      ! Tolerance for the Newton solver
      real(dp) :: tol
		integer :: tol_mode

		tol_mode = 1 ! constant
		!tol_mode = 2 ! dynamic
      
      if (istep.eq.0) then
         ! load initial guess
         call load_fld('BF.fld')
         call nek2vec(bf, vx, vy, vz, pr, t)
         
         ! parameters
         tol = 1e-6_dp

         ! define system
         sys = nek_system()
         sys%jacobian = nek_jacobian()
         sys%jacobian%X = bf
         call newton_fixed_point_iteration(sys, bf, tol, tol_mode)
         call outpost(bf%vx, bf%vy, bf%vz, bf%pr, bf%theta, "BF_")
         
         call nek_end()
      end if

      return
      end
