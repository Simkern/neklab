c-----------------------------------------------------------------------
      subroutine userchk
      use neklab
      include 'SIZE'
      include 'TOTAL'

      type(nek_dvector) :: bf
    	type(exptA_linop) :: exptA
      type(LNS_linop)   :: A
      real(dp) :: tau
	
    	if (istep.eq.0) then
    		! Load baseflow.
    		call load_fld("BF_bfs0.f00001")
    		call nek2vec(bf, vx, vy, vz, pr, t)

            tau = 0.0001_dp

    		! Exponential propagator.
    		exptA = exptA_linop(tau, bf)
            call exptA%init()

            ! LNS.
    		A = LNS_linop(bf)
            call A%init()

            ! 
            call compare_nek_arnoldi(A, exptA, tau)

    		call nek_end()
    	endif

      return
      end
